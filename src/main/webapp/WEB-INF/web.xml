<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>LoginControlador</servlet-name>
        <servlet-class>com.openhm.controlador.LoginControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioControlador</servlet-name>
        <servlet-class>com.openhm.controlador.UsuarioControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MapaControlador</servlet-name>
        <servlet-class>com.openhm.controlador.MapaControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminControlador</servlet-name>
        <servlet-class>com.openhm.controlador.AdminControlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControlador</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioControlador</servlet-name>
        <url-pattern>/Usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MapaControlador</servlet-name>
        <url-pattern>/Mapa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminControlador</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
